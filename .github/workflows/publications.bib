name: Import Publications

on:
  push:
    paths:
      - publications.bib
  workflow_dispatch:

jobs:
  update-publications:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.x'

      - name: Install requirements
        run: pip install scholarly pyyaml bibtexparser

      - name: Run import script
        run: python import_publications.py
